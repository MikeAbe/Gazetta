@model IEnumerable<Gazzetta.Models.Magazine>

@{
    ViewBag.Title = "UserBooks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">

    <div class="searchResults">

        <h4 style="text-align: center">Search Results</h4>
        <ul class="caption-style-2">
            @foreach (var magazine in Model)
            {
                <li class="col-lg-push-3">
                    <img Style="width: 200px; height: 300px;" src="@Url.Action("GetThumbnail", new {id = magazine.Id.ToString()})" />
                    <div class="caption">
                        <a href="@Url.Action("Details", "Books", new {id = magazine.Id})">
                            <div class="blur"></div>
                            <div class="caption-text">
                                <h1>@magazine.Publication.Name</h1>
                                @*<p>By: @magazine.Author</p>*@
                                <p>@magazine.Publication.Description</p>
                            </div>
                        </a>
                    </div>
                </li>
            }
        </ul>
    </div>
</div>





      


