@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div id="myCarousel" class="carousel slide" data-interval="3000" data-ride="carousel">

    <!-- Carousel indicators -->

    <ol class="carousel-indicators">

        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>

        <li data-target="#myCarousel" data-slide-to="1"></li>

        <li data-target="#myCarousel" data-slide-to="2"></li>

    </ol>

    <!-- Carousel items -->

    <div class="carousel-inner">

        <div class="item active">

            <img src="~/Content/images/Book.jpg" alt="First Slide">

            <div class="carousel-caption">

                <h3>Start reading today</h3>

                <p>Search for your favorite book...</p>

            </div>

        </div>

        <div class="item">

            <img src="~/Content/images/Superman Dead.jpg" alt="Second Slide">

            <div class="carousel-caption">

                <h3>Start reading today</h3>

                <p>Breaking the biggest stories in the world...</p>

            </div>

        </div>

        <div class="item">

            <img src="~/Content/images/Flying to Metropolis.jpg" alt="Third Slide">

            <div class="carousel-caption">

                <h3>Your favorite newspapers in one place</h3>

                <p>Praesent commodo cursus magna vel...</p>

            </div>

        </div>

    </div>

    <!-- Carousel nav -->

    <a class="carousel-control left" href="#myCarousel" data-slide="prev">

        <span class="glyphicon glyphicon-chevron-left"></span>

    </a>

    <a class="carousel-control right" href="#myCarousel" data-slide="next">

        <span class="glyphicon glyphicon-chevron-right"></span>

    </a>

</div>